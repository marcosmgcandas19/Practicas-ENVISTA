<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_movie_tree" model="ir.ui.view">
        <field name="name">cinenvista.movie.tree</field>
        <field name="model">cinenvista.movie</field>
        <field name="arch" type="xml">
            <tree string="Películas">
                <field name="title"/>
                <field name="rating"/>
            </tree>
        </field>
    </record>

    <record id="view_movie_form" model="ir.ui.view">
        <field name="name">cinenvista.movie.form</field>
        <field name="model">cinenvista.movie</field>
        <field name="arch" type="xml">
            <form string="Película">
                <sheet>
                    <group>
                        <group>
                            <field name="title"/>
                            <field name="rating"/>
                        </group>
                        <group>
                            <field name="image_url" widget="url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción" name="description">
                            <field name="description" placeholder="Añade una sinopsis..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cinenvista_movie" model="ir.actions.act_window">
        <field name="name">Películas</field>
        <field name="res_model">cinenvista.movie</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_cinenvista_root" 
              name="Cinenvista" 
              sequence="10"/>

    <menuitem id="menu_cinenvista_movie_child" 
              name="Películas" 
              parent="menu_cinenvista_root" 
              action="action_cinenvista_movie" 
              sequence="10"/>
</odoo>