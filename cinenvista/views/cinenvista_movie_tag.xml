<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_movie_tag_tree" model="ir.ui.view">
        <field name="name">cinenvista.movie.tag.tree</field>
        <field name="model">cinenvista.movie.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>

    <record id="view_movie_tag_form" model="ir.ui.view">
        <field name="name">cinenvista.movie.tag.form</field>
        <field name="model">cinenvista.movie.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" placeholder="Nombre de la etiqueta"/>
                        <field name="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cinenvista_movie_tag" model="ir.actions.act_window">
        <field name="name">Etiquetas de Pel√≠culas</field>
        <field name="res_model">cinenvista.movie.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
