<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_room_tree" model="ir.ui.view">
        <field name="name">cinenvista.room.tree</field>
        <field name="model">cinenvista.room</field>
        <field name="arch" type="xml">
            <tree string="Salas">
                <field name="name"/>
                <field name="capacity"/>
            </tree>
        </field>
    </record>

    <record id="view_room_form" model="ir.ui.view">
        <field name="name">cinenvista.room.form</field>
        <field name="model">cinenvista.room</field>
        <field name="arch" type="xml">
            <form string="Sala de Cine">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nombre de la Sala"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="capacity"/>
                    </group>

                    <notebook>
                        <page string="Proyecciones" name="proyecciones">
                            <field name="screening_ids">
                                <tree editable="bottom">
                                    <field name="movie_id"/>
                                    <field name="start_time"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>