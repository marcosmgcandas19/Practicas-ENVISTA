<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_fax" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.fax</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='phone']" position="after">
                <field name="fax"/>
            </xpath>

            <xpath expr="//field[@name='category_id']" position="before">
                <field name="member_level" string="Nivel de Miembro"/>
                <field name="loyalty_points" string="Puntos de Lealtad"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="CinenVista" name="cinenvista_info">
                    <group>
                        <group string="EstadÃ­sticas de Cliente">
                            <field name="reservation_count" string="Reservas Totales"/>
                        </group>
                    </group>
                    
                    <group string="Historial de Reservas">
                        <field name="reservation_ids" nolabel="1">
                            <tree create="false" edit="false" delete="false">
                                <field name="name" string="Ticket"/>
                                <field name="screening_id"/>
                                <field name="seat_qty" sum="Total Asientos"/>
                                <field name="state" widget="badge"
                                       decoration-info="state == 'draft'"
                                       decoration-success="state == 'confirmed'"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>
</odoo>