<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_seat_tree" model="ir.ui.view">
        <field name="name">cinenvista.seat.tree</field>
        <field name="model">cinenvista.seat</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="row"/>
                <field name="number"/>
                <field name="room_id"/>
            </tree>
        </field>
    </record>

    <record id="view_seat_tree_grouped" model="ir.ui.view">
        <field name="name">cinenvista.seat.tree.grouped</field>
        <field name="model">cinenvista.seat</field>
        <field name="arch" type="xml">
            <tree default_group_by="room_id">
                <field name="name"/>
                <field name="row"/>
                <field name="number"/>
                <field name="room_id"/>
            </tree>
        </field>
    </record>

    <record id="action_cinenvista_seat" model="ir.actions.act_window">
        <field name="name">Butacas</field>
        <field name="res_model">cinenvista.seat</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_seat_tree_grouped"/>
    </record>
</odoo>
