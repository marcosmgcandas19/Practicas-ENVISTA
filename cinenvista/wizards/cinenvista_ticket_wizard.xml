<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ticket_wizard_form" model="ir.ui.view">
        <field name="name">cinenvista.ticket.wizard.form</field>
        <field name="model">cinenvista.ticket.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm_sale" string="Confirmar Venta" type="object" class="oe_highlight"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>Venta Rápida de Entradas</h1>
                    </div>
                    <group>
                        <group string="Información General">
                            <field name="screening_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="partner_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group string="Cantidades">
                            <field name="qty_regular"/>
                            <field name="qty_vip"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ticket_wizard" model="ir.actions.act_window">
        <field name="name">Venta Rápida de Entradas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cinenvista.ticket.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>