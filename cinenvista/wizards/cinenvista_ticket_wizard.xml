<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ticket_wizard_form" model="ir.ui.view">
        <field name="name">cinenvista.ticket.wizard.form</field>
        <field name="model">cinenvista.ticket.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm_sale" string="Confirmar Venta" type="object" class="oe_highlight"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>Venta Rápida de Entradas</h1>
                    </div>
                    <field name="room_id" invisible="1"/>
                    <field name="occupied_seat_ids" invisible="1"/>

                    <group>
                        <group string="Información General">
                            <field name="screening_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="partner_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group string="Cantidades">
                            <field name="qty_regular"/>
                            <field name="qty_vip"/>
                        </group>
                    </group>

                    <group string="Programa de Fidelización" name="loyalty_section">
                        <group>
                            <field name="redeem_points" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <label for="partner_id" string="Puntos Disponibles"/>
                            <div class="o_row">
                                <field name="partner_id" readonly="1" options="{'no_open': True}"/> 
                                <span>: </span>
                                <field name="partner_id" readonly="1" force_save="1"/> </div>
                        </group>
                    </group>
                    
                    <group string="Selección de Asientos">
                        <field name="selected_seat_ids" 
                               widget="many2many_tags" 
                               options="{'no_create': True}"
                               placeholder="Haz clic para seleccionar las butacas..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ticket_wizard" model="ir.actions.act_window">
        <field name="name">Venta Rápida de Entradas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cinenvista.ticket.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>